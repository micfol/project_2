<h2>User Profile Page</h2> 
<br>
<h4 id=".c-font">Username:</h4>
    <p id=".c-font">{{loggedInUser.username}}</p>
<h4 id=".c-font">Bio:</h4>
    <p id=".c-font">{{loggedInUser.bio}}</p>
<a class="btn btn-outline-light btn-sm" href="/user/edit-profile" role="button">Edit Username or Bio</a>
<br>
<br>
<h4>Posts:</h4><br>

<div class="container">
    <div class="row">
        {{#each loggedInUser.pictureEntries}}
            <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card mx-auto my-4" style="max-width: 18rem;">
                <img src={{image}} class="card-img-top" alt="Photo Entry by User">
                <div class="card-body">
                    <h5 class="card-title" id=".c-font">{{location}}</h5>
                    <p class="card-text" id=".c-font">{{description}}</p>
                    <a type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#exampleModal{{_id}}">
                Delete Post
                </a>
                </div>
                </div>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal{{_id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirm Delete Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Confirm you wish to delete your post!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
                    <a href="/pictureApp/{{_id}}/delete" type="button" class="btn btn-danger btn-sm" >
                    Delete Post
                    </a>
                    </div>
                    </div>
                </div>
                </div>
                <br>
            </div>
        {{/each}}
    </div>
</div>