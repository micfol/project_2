<h2>Add Picture View</h2>

<button onclick="getLocation()">Add current Lattitude and Longitude to Form</button>
<script>
    var x = document.getElementById("demo");
    function getLocation() {
    if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(showPosition);
    } else { 
        x.innerHTML = "Geolocation is not supported by this browser.";
    }
    }
    function showPosition(position) {
    document.getElementById('lattitude').value = position.coords.latitude;
    document.getElementById('longitude').value = position.coords.longitude;
    }
</script><br><br>


<form action="/pictureApp/add-photo" method="post" enctype="multipart/form-data">
    <label>Select Image File:</label>
    <input type="file" name="image"><br>
    <label>Latitude:</label><br>
    <input type="text" name="lattitude" id="lattitude" readonly><br>
    <label>Longitude:</label><br>
    <input type="text" name="longitude" id="longitude" readonly><br>
    <label>Location:</label><br>
    <textarea rows="1" cols="45" name="location" placeholder="Where was the picture was taken?"></textarea><br>
    <label>Description:</label><br>
    <textarea rows="2" cols="45" name="description" placeholder="Tell everyone about the picture you took!"></textarea><br>

